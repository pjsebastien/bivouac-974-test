

{% extends 'base.html.twig' %}


{% block title %}Log in!{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>

    {% else %}

    <div class="flex justify-center items-center mt-20" >
		<form class="p-10 bg-white rounded-xl flex justify-center items-center flex-col shadow-md" method="post">
			<div class="w-auto h-auto rounded-full mb-6">
                <img class="w-16 lg:w-20 h-16 lg:h-20 object-cover rounded-full shadow cursor-pointer mx-auto" alt="Profile-user" src="{{asset('galerie/profile-user.png')}}">
            </div>
			<p class="mb-5 text-3xl fot-bold text-gray-600">Connection</p>
			<input type="email" placeholder="Adresse mail" value="{{ last_username }}" name="email" id="inputEmail" class="mb-5 p-3 w-80 focus:border-green-500 rounded border-2 outline-none form-control" autocomplete="email" required autofocus>
			<input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control p-3 w-80 focus:border-green-500 rounded border-2 outline-none" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
            >
            <p class="text-xs  mb-1 mt-2 text-gray-600 hover:text-black"><a href="{{path('app_forgot_password_request')}}">Mot de passe oublié ?</a></p>
            <p class="text-xs  mb-10 text-gray-600 hover:text-black"><a href="{{path('app_register')}}">Pas encore enregistrer ?</a></p>
			<button class="bg-green-400 hover:bg-green-600 text-white font-bold p-2 rounded-xl w-80" type="submit"><span>Login</span></button>
		</form>
        <br>
        
	</div>
    
    

