{% extends 'base.html.twig' %} 
{% block title %}Nous contacter{% endblock %} 
{% block body %}

<div class="">
    <div class='flex  md:w-3/4 lg:w-3/5 my-10 bg-white shadow-md rounded-lg overflow-hidden mx-auto'>
        {% for message in app.flashes('message') %}
        <div class="col-xs4">
            <div class="p-3 my-2 rounded-2 success">{{message}}</div>
        </div>   
        {% endfor %}
        <div class='flex-col items-center w-full'>
            <div class='w-full'>
                <div class="flex flex-row flex-wrap mt-2 px-2 py-3 mx-3 items-center">
                    <div class="w-1/6 h-auto rounded-full">
                        <img class="w-16 lg:w-20 h-16 lg:h-20 object-cover rounded-full shadow cursor-pointer mx-auto" alt="Profile-user" src="{{asset('logo/main.png')}}">
                    </div>
                    <div class="w-4/6 flex flex-col mb-2 ml-4 mt-1">
                        <div class='text-gray-600 text-xl font-bold uppercase ml-12 '>Nous contacter</div>
                        
                    </div>
                </div>
                <div class="border-b border-gray-100"></div>

     
                <div class='text-gray-400 font-medium text-sm mb-7 mt-6 mx-3 px-2'>
                    <img class=" mx-auto w-32 " alt="user" src="{{asset('galerie/contact.png')}}">
                    <p class="text-center text-xl mt-2">Une suggestion, une question ? </p>                                   
                </div>               
            </div>
            <div class='text-gray-600 my-10 mx-3 px-2'>
                <div class="p-6 bg-gray-50 border-b border-gray-200" id="add-bivouac">
                    
                    {{ form_start(form) }}
                    <div class="mb-8">
                        <label class="text-md text-gray-600">Votre adresse email</label><br>
                        {{form_row(form.email)}}
                    </div>
                    <div class="mb-8">
                        <label class="text-md text-gray-600">Sujet du message</label><br>
                        {{form_row(form.sujet)}}
                    </div>
                    <div class="mb-8">
                        <label class="text-md text-gray-600">Message</label><br>
                        {{form_row(form.message)}}
                    </div>

                
        
            {{form_end(form)}}
                </div>
                
            </div>
            
        </div>
        

    </div>
</div>

    

    
{% endblock %}
