{% extends 'base.html.twig' %}

{% block title %}Gérer les tags{% endblock %}

{% block body %}
<h1>Gérer les tags</h1>
    <a href="{{ path('admin_tag_ajout')}}" class="btn shadow-1 rounded-1 blue" >Ajouter un tag</a>

<div class="responsive-table">
    <table class="table striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
          {% for tag in tag %}
            <tr>
                <td>{{tag.id}}</td>
                <td>{{tag.name}}</td>
                <td class="text-center">
                    <a href="{{ path('admin_tag_modifier', {id: tag.id})}}" class="btn shadow-1 rounded-1 blue" >Modifier</a>
                </td>
                
            </tr>
              
          {% endfor %}
        
      </tbody>
    </table>
  </div>


{% endblock %}
